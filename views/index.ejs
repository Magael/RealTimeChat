                        <input class="form-control" type="text" name="username" id="username" value="" placeholder="Username..." required>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Password :</span>
                        <input class="form-control" type="password" name="password" id="password" value="" placeholder="Password..." required>
                    </div>
                    <div class="text-center mt-5 mb-1">
                        <!--<input type="hidden" name="token" value="">-->
                        <button class="btn text-white" style="background-color: #396FAE;" type="submit" name="submit">LOG IN</button>
                    </div>
                </form>
